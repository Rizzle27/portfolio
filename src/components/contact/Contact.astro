---
import Section from "../Section.astro"
---

<Section>
  <h2 class="text-white text-4xl" id="contact">Contactame</h2>

  <div class="flex flex-col md:flex-row my-4 rounded-[12px] bg-darkJungleGreen">

    <form class="flex flex-col gap-6 p-6 md:w-[46%] text-white" action="https://api.web3forms.com/submit" method="POST">
  
      <input type="hidden" name="access_key" value="053ca69e-95c3-45d4-8da3-32105b06d6b3">
  
      <label for="name">
        <input class="w-full border-2 py-1 px-2 border-jade rounded-[10px] bg-darkJungleGreen focus-visible:outline-none" type="text" name="name" id="name" placeholder="Nombre completo" required>
      </label>
  
      <label for="email">
        <input class="w-full border-2 py-1 px-2 border-jade rounded-[10px] bg-darkJungleGreen focus-visible:outline-none" type="email" name="email" id="email" placeholder="Ingresá tu correo" required>
      </label>
  
      <label for="message">
        <textarea class="w-full border-2 py-1 px-2 border-jade rounded-[10px] bg-darkJungleGreen focus-visible:outline-none" name="message" id="message" placeholder="Ingresá tu mensaje" rows="4" required></textarea>
      </label>
  
      <input class="bg-jade rounded-[10px] p-2 cursor-pointer" type="submit" value="Enviar">
  
      <script src="https://web3forms.com/client/script.js" async defer></script>
  
    </form>
    <div class="justify-center items-center p-4 rounded-b-[12px] md:w-[54%] md:rounded-[12px] md:shadow-2xl md:shadow-black bg-jade hidden md:flex">
      <img class="w-[40%]" src="/icons/mail.png" alt="">
    </div>

  </div>
</Section>